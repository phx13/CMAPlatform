    <ImageBrush ImageSource="../Images/SearchBgOrange.png"
                x:Key="EventListSearchGrayBackgroundOrange"
                Stretch="None" />

    <Style x:Key="EventBtnStyle"
           TargetType="Button">
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Width"
                Value="640" />
        <Setter Property="Height"
                Value="223" />
        <Setter Property="Margin"
                Value="0,0,0,20" />
        <Setter Property="Background"
                Value="{StaticResource EventListBackground}" />
        <Setter Property="Foreground"
                Value="#4DFFFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Height="{TemplateBinding Height}"
                          Width="{TemplateBinding Width}"
                          Margin="0,0,0,0">
                        <!--<Image x:Name="Image"
                               Source="../Images/EventListBackground.png"
                               Stretch="None"></Image>-->
                        <Border Background="{TemplateBinding Background}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                x:Name="Image" />
                        <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          x:Name="cp"
                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                          Height="{TemplateBinding Height}"
                                          Width="{TemplateBinding Width}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Background"
                                        Value="{StaticResource EventListBackgroundOrange}"
                                        TargetName="Image" />
                                <Setter Property="TextElement.Foreground"
                                        Value="#FFAA55"
                                        TargetName="cp" />
                                <Setter Property="Tag"
                                        Value="True"
                                        TargetName="cp" />
                            </Trigger.Setters>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Background"
                                        Value="{StaticResource EventListBackgroundOrange}"
                                        TargetName="Image" />
                                <Setter Property="TextElement.Foreground"
                                        Value="#FFAA55"
                                        TargetName="cp" />
                                <Setter Property="Tag"
                                        Value="True"
                                        TargetName="cp" />
                            </Trigger.Setters>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>

