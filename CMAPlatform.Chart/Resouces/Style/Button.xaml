<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Digihail.AVE.Launcher.Controls;assembly=AVE.Launcher.Controls">

    <!--综合查询button-->
    <Style x:Key="SelectButtonStyle"
           TargetType="Button">
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="FontSize"
                Value="15" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="grid"
                          Height="{TemplateBinding Height}"
                          Width="{TemplateBinding Width}"
                          UseLayoutRounding="True">
                        <Image x:Name="Image"
                               Source="../Images/ComprehenSiveBrnbg_blue.png" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Source"
                                        TargetName="Image"
                                        Value="../Images/ComprehenSiveBrnbg_Yellow.png" />
                            </Trigger.Setters>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Source"
                                        TargetName="Image"
                                        Value="../Images/ComprehenSiveBrnbg_Yellow.png" />
                            </Trigger.Setters>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Trigger.Setters>
                                <Setter Property="Source"
                                        Value="../Images/ComprehenSiveBrnbg_Yellow.png"
                                        TargetName="Image" />
                            </Trigger.Setters>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
