<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:CMAPlatform.Chart.Converter">
    <converter:LayerPicConverter1 x:Key="LayerPicConverter" />

    <!--左边是选择框右边文字-->
    <Style x:Key="RectChkboxStyle"
           TargetType="CheckBox">
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="Foreground"
                Value="#CCCCCC" />
        <Setter Property="Height"
                Value="22" />
        <Setter Property="FontFamily"
                Value="Microsoft Yahei" />
        <Setter Property="FontSize"
                Value="20" />
        <Setter Property="BorderBrush"
                Value="#4795BA" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border Name="bor"
                                Height="17"
                                Width="17"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Background="#122934" />
                        <Path Height="9"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Width="11"
                              Stretch="Fill"
                              Name="bd"
                              Opacity="1"
                              Data="M 0,3.599853515625 C0,3.599853515625 3.86376953125,6.3563232421875 3.63623046875,6.2999267578125 3.408935546875,6.243896484375 10,0 10,0 10,0 10,3.296875 10,3.296875 10,3.296875 3.63623046875,9 3.63623046875,9 3.63623046875,9 0,6.2999267578125 0,6.2999267578125 0,6.2999267578125 0,3.599853515625 0,3.599853515625 z"
                              Fill="#00FFFF" />
                        <ContentPresenter Grid.Column="1"
                                          TextElement.Foreground="#FFFFFF"
                                          Margin="9,0,0,0"
                                          TextElement.FontFamily="{TemplateBinding FontFamily}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          TextElement.FontSize="{TemplateBinding FontSize}"
                                          Content="{TemplateBinding Content}"
                                          x:Name="cp" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="bd"
                                    Property="Visibility"
                                    Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="False">
                            <Setter TargetName="bd"
                                    Property="Visibility"
                                    Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="{x:Null}">
                            <Setter TargetName="bd"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Setter TargetName="bd"
                                    Property="Fill"
                                    Value="#664C00" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="BorderBrush"
                                    TargetName="bor"
                                    Value="#395366" />
                            <Setter TargetName="bd"
                                    Property="Fill"
                                    Value="#395366" />
                            <Setter Property="TextElement.Foreground"
                                    TargetName="cp"
                                    Value="#FF6D6D6D" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
