        <Setter Property="Topmost"
                Value="True" />
        <Setter Property="AllowsTransparency"
                Value="True" />
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="../Images/background.fw.png" />
            </Setter.Value>
        </Setter>
        <Setter Property="ResizeMode"
                Value="NoResize" />
