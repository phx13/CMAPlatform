                                    <Border Margin="15,2,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Width="auto">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock HorizontalAlignment="Left"
