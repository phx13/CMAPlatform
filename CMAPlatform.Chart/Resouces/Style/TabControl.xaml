                            </Border>
                        </Grid>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--默认样式-->
    <Style TargetType="TabControl"
           BasedOn="{StaticResource EventDownContentTabControlStyle}" />
</ResourceDictionary>