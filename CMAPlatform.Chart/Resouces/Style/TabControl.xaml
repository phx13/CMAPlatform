<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="TabItemNormalBorderBackround"
                     Color="#0099CC"
                     Opacity="1" />
    <SolidColorBrush x:Key="TabItemNormalBackground"
                     Color="#FF004860"
                     Opacity="1" />
    <SolidColorBrush x:Key="TabItemSelectedBorderBackround"
                     Color="#17C6FF"
                     Opacity="1" />
    <SolidColorBrush x:Key="TabItemSelectedBackground"
                     Color="#0099CC"
                     Opacity="1" />
    <SolidColorBrush x:Key="TabItemDisabledBackground"
                     Color="#FFF5F4EA" />
    <SolidColorBrush x:Key="TabItemDisabledBorderBrush"
                     Color="#22B5CE" />
    <ImageBrush x:Key="TabControlHeaderBg"
                ImageSource="../Images/TabControlHeaderBg.png" />
    <ImageBrush x:Key="TabItemBg"
                ImageSource="../Images/TabItemBg.png" />
    <!--选中态为橘色,常态为浅蓝色的Item-->
    <Style x:Key="EventItemStyle"
           TargetType="{x:Type TabItem}">
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="BorderThickness"
                Value="1,1,1,0" />
        <Setter Property="Width"
                Value="Auto" />
        <Setter Property="BorderBrush"
                Value="transparent" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Background"
                Value="#F0F0F0" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="FontSize"
                Value="18" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="FontWeight"
                Value="Bold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Border SnapsToDevicePixels="true">
                        <Grid Margin="10,0,1,5"
                              Name="rootGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  x:Name="bottomGrid"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" />
                            <ContentPresenter ContentSource="Header"
                                              x:Name="txtContent"
                                              Grid.Row="0"
                                              HorizontalAlignment="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                              RecognizesAccessKey="True"
                                              TextElement.FontSize="28"
                                              TextElement.Foreground="White"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Background"
                                        TargetName="bottomGrid"
                                        Value="{StaticResource TabItemBg}" />
                                <Setter Property="Background"
                                        TargetName="bottomGrid"
                                        Value="{StaticResource TabItemBg}" />
                                <Setter Property="TextElement.Foreground"
                                        TargetName="txtContent"
                                        Value="Black" />
                            </Trigger.Setters>
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Background"
                                        TargetName="bottomGrid"
                                        Value="{StaticResource TabItemBg}" />
                                <Setter Property="TextElement.Foreground"
                                        TargetName="txtContent"
                                        Value="Black" />
                            </Trigger.Setters>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Trigger.Setters>
                                <Setter Property="Background"
                                        TargetName="bottomGrid"
                                        Value="{StaticResource TabItemBg}" />
                                <Setter Property="TextElement.Foreground"
                                        TargetName="txtContent"
                                        Value="Black" />
                                <Setter Property="Opacity"
                                        TargetName="txtContent"
                                        Value="0.2" />
                            </Trigger.Setters>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--突发事件TabItem-->
    <Style x:Key="EventHeaderStyle"
           TargetType="{x:Type TabItem}">
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="BorderBrush"
                Value="transparent" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Border SnapsToDevicePixels="true"
                            Height="{TemplateBinding Height}"
                            Width="{TemplateBinding Width}">
                        <Grid Name="rootGrid"
                              Margin="10,0,1,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*" />
                                <RowDefinition Height="26*" />
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Source="../Images/ListViewHeader.png" />
                            <Image Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Grid.Row="1"
                                   Source="../Images/ListViewBackground.png"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   Stretch="UniformToFill"
                                   Margin="15,0,0,0" />
                            <Image x:Name="imageName"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Grid.Column="1"
                                   Source="../Images/ListViewEvent.png"
                                   Stretch="Fill" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Source"
                                        TargetName="imageName"
                                        Value="../Images/ListViewEvent_Selected.png" />
                            </Trigger.Setters>
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Trigger.Setters>
                                <Setter Property="Source"
                                        TargetName="imageName"
                                        Value="../Images/ListViewEvent_Selected.png" />
                            </Trigger.Setters>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

