        <StackPanel Orientation="Vertical"
                    x:Name="stackPanel"
                    Width="130"
                    Background="Transparent"
                    HorizontalAlignment="Right">
            <TextBlock x:Name="textBlock"
                       Text="{Binding}"
                       Block.TextAlignment="Right"
                       HorizontalAlignment="Right" />
