<base:ChartViewBase x:Class="CMAPlatform.Chart.View.EventInfoShowList"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:base="clr-namespace:Digihail.DAD3.Charts.Base;assembly=DAD3.Charts"
                    mc:Ignorable="d"
                    d:DesignHeight="300" d:DesignWidth="300">
    <Grid Height="31"
          VerticalAlignment="Top"
          HorizontalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush ImageSource="../Resouces/Images/EventInfoListBg.png" />
        </Grid.Background>
        <Border x:Name="border"
                VerticalAlignment="Center"
                Margin="10 0 0 0">
            <TextBlock x:Name="txtBlock"
                       FontSize="16"
                       Foreground="#DBDBEA"
                       Text="{Binding CurEventInfo}" />
        </Border>
    </Grid>
</base:ChartViewBase>